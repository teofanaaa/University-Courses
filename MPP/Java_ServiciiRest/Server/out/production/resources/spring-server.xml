<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="userRepo" class="repository.UserRepository">
    </bean>
    <bean id="participantRepo" class="repository.ParticipantRepository">
    </bean>
    <bean id="probaRepo" class="repository.ProbaRepository">
    </bean>
    <bean id="inscriereRepo" class="repository.InscriereRepository">
    </bean>

    <bean id="concursService" class="server.ServerImpl">
        <constructor-arg ref="userRepo"/>
        <constructor-arg ref="participantRepo"/>
        <constructor-arg ref="probaRepo"/>
        <constructor-arg ref="inscriereRepo"/>
    </bean>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">

        <property name="serviceName" value="Concurs"/>
        <property name="service" ref="concursService"/>
        <property name="serviceInterface" value="services.IServer"/>
        <property name="servicePort" value="1099"/>
    </bean>


</beans>